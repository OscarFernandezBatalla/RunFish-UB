<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">


    <android.support.constraint.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fons"
            tools:context=".activityFragments.MainActivity">
        <TextView
                android:text="@string/run"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_run"
                android:textSize="54sp"
                android:fontFamily="@font/freescpt"
                android:textColor="@color/colorTitol"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="@+id/image_nemo"
                app:layout_constraintHorizontal_bias="0.882"
                android:layout_marginTop="128dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="@string/fish"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_fish"
                android:textSize="54sp"
                android:fontFamily="@font/freescpt"
                android:textColor="@color/colorTitol"
                android:textStyle="bold"
                android:layout_marginStart="36dp"
                app:layout_constraintStart_toStartOf="@+id/image_nemo"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.024"
                android:layout_marginTop="128dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
                android:src="@drawable/anemone"
                android:layout_width="64dp"
                android:layout_height="52dp"
                android:id="@+id/image_nemo"
                android:contentDescription="@string/todo"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.499"
                android:layout_marginTop="136dp"
                app:layout_constraintTop_toTopOf="parent"/>


        <com.google.android.gms.common.SignInButton android:layout_width="247dp"
                                                    android:layout_height="51dp"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    android:layout_marginStart="8dp"
                                                    app:layout_constraintEnd_toEndOf="parent"
                                                    android:layout_marginEnd="8dp"
                                                    app:layout_constraintHorizontal_bias="0.498"
                                                    android:id="@+id/signInGoogleButton"
                                                    android:layout_marginTop="8dp"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    android:layout_marginBottom="8dp"
                                                    app:layout_constraintBottom_toBottomOf="parent"
                                                    app:layout_constraintVertical_bias="0.61"></com.google.android.gms.common.SignInButton>


    </android.support.constraint.ConstraintLayout>


</layout>