<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".SignInFragment" android:background="@drawable/fons">
    <android.support.constraint.ConstraintLayout
            android:layout_width="525dp"
            android:layout_height="363dp"
            tools:context=".SignInFragment"
            android:background="@drawable/tablon_grande"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/layout_constrait_table">
        <EditText
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/edit_text_username_invite"
                android:hint="@string/username_text"
                android:background="@android:color/background_light"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/image_icon" android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/colorMistral"/>
        <ImageView
                android:src="@drawable/google"
                android:layout_width="190dp"
                android:layout_height="52dp"
                android:id="@+id/image_google"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.498"
                android:contentDescription="@string/description_image_google"/>
        <ImageView
                android:src="@drawable/avatar_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_icon"
                app:layout_constraintTop_toBottomOf="@+id/image_google"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/description_user_image"/>
        <EditText
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/edit_text_email"
                android:hint="@string/email_text"
                android:background="@android:color/background_light"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_username_invite"
                android:textColorHint="@android:color/darker_gray" android:textColor="@color/colorMistral"/>
        <EditText
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/edit_text_password"
                android:background="@android:color/background_light"
                android:hint="@string/password_value"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_email"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.502" android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/colorMistral"/>
        <Button
                android:text="@string/sign_in_value"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:id="@+id/button_sign_in"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_password"
                android:background="@android:color/holo_blue_dark"
                android:layout_marginTop="12dp"
                android:textColor="@android:color/background_light"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintVertical_bias="0.0"/>
    </android.support.constraint.ConstraintLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_comeback"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/flecha_animation_izq"/>

</android.support.constraint.ConstraintLayout>


