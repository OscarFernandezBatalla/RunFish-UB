<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".activityFragments.FriendsFragment"
                                             android:id="@+id/constraintLayout"
                                             android:background="@drawable/fons">
    <TextView
            android:layout_width="170dp"
            android:layout_height="55dp"
            android:id="@+id/text_Menu"
            android:background="@drawable/tablon"
            style="@style/MistralStyle"
            android:paddingTop="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:text="@string/menu"
            android:textAlignment="center"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="500dp"
            tools:context=".activityFragments.SignInFragment"
            android:background="@drawable/tablon_grande"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/layout_constrait_table"
            android:layout_height="340dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="355dp"
                android:layout_height="229dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintVertical_bias="0.505">

            <Button
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imageButton_cross"
                    android:background="@drawable/cross_five"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:contentDescription="@string/description_image_cross"
            />
            <Button
                    android:text="@string/invite"
                    android:layout_width="120dp"
                    android:layout_height="39dp"
                    android:id="@+id/button_Invite"
                    android:background="@drawable/fusta_animation" style="@style/MistralStyle"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/edit_text_username_invite"
                    app:layout_constraintEnd_toEndOf="@+id/edit_text_username_invite"
                    app:layout_constraintStart_toStartOf="@+id/edit_text_username_invite"/>
            <EditText
                    android:layout_width="120dp"
                    android:layout_height="31dp"
                    android:id="@+id/edit_text_username_invite"
                    android:background="@android:color/background_light"
                    android:hint="@string/username_text"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toTopOf="parent" android:inputType="text"
                    app:layout_constraintEnd_toStartOf="@+id/imageButton_cross" android:layout_marginEnd="8dp"
                    style="@style/MistralBarStyle"/>

            <ScrollView
                    android:layout_width="176dp"
                    android:layout_height="211dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/scrollView3">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                >
                    <TextView
                            android:text="@string/friend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/text_friend0"
                            style="@style/MistralStyle"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/image_ball_friend0"
                            android:layout_marginStart="24dp" android:visibility="gone"/>
                    <ImageView
                            android:src="@drawable/bola_verde"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/image_ball_friend0"
                            android:contentDescription="@string/description_image_green_ball"
                            style="@style/MistralStyle"
                            android:layout_marginTop="24dp"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="24dp"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="@+id/text_friend0" android:visibility="gone"/>
                    <ImageView
                            android:src="@drawable/bola_verde"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/image_ball_friend1"
                            style="@style/MistralStyle"
                            app:layout_constraintBottom_toBottomOf="@+id/text_friend1"
                            app:layout_constraintStart_toStartOf="@+id/image_ball_friend0"
                            app:layout_constraintTop_toBottomOf="@+id/image_ball_friend0"
                            app:layout_constraintVertical_bias="1.0"
                            android:contentDescription="@string/description_image_green_ball"
                            android:visibility="gone"/>
                    <TextView
                            android:text="@string/friend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_friend1"
                            style="@style/MistralStyle"
                            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/text_friend0"
                            app:layout_constraintStart_toEndOf="@+id/image_ball_friend1"
                            android:layout_marginStart="24dp" android:visibility="gone"/>
                    <ImageView
                            android:src="@drawable/bola_verde"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/image_ball_friend2"
                            style="@style/MistralStyle"
                            app:layout_constraintStart_toStartOf="@+id/image_ball_friend0"
                            app:layout_constraintBottom_toBottomOf="@+id/text_friend2"
                            app:layout_constraintTop_toBottomOf="@+id/image_ball_friend1"
                            app:layout_constraintVertical_bias="1.0"
                            android:contentDescription="@string/description_image_green_ball"
                            android:visibility="gone"/>
                    <TextView
                            android:text="@string/friend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/text_friend3"
                            app:layout_constraintTop_toBottomOf="@+id/text_friend2" android:layout_marginTop="24dp"
                            style="@style/MistralStyle" app:layout_constraintStart_toEndOf="@+id/image_ball_friend3"
                            android:layout_marginStart="24dp" android:visibility="gone"/>
                    <TextView
                            android:text="@string/friend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_friend2"
                            style="@style/MistralStyle"
                            app:layout_constraintTop_toBottomOf="@+id/text_friend1" android:layout_marginTop="24dp"
                            app:layout_constraintStart_toEndOf="@+id/image_ball_friend2"
                            android:layout_marginStart="24dp" android:visibility="gone"/>
                    <ImageView
                            android:src="@drawable/bola_gris"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/image_ball_friend3"
                            app:layout_constraintBottom_toBottomOf="@+id/text_friend3"
                            app:layout_constraintTop_toBottomOf="@+id/image_ball_friend2"
                            app:layout_constraintVertical_bias="1.0"
                            app:layout_constraintStart_toStartOf="@+id/image_ball_friend0"
                            android:contentDescription="@string/description_image_grey_ball" android:visibility="gone"/>
                </android.support.constraint.ConstraintLayout>
            </ScrollView>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>